<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/dummyprofilepic" />

    <TextView
        android:id="@+id/otherMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profilePic"
        android:layout_marginStart="8dp"
        android:text="Message text"
        android:textSize="16sp" />

    <!-- New ImageView for media messages -->
    <ImageView
        android:id="@+id/otherMessageImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/otherMessageText"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/otherMessageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/otherMessageImage"
        android:text="2 min ago"
        android:textSize="12sp" />
</RelativeLayout>
