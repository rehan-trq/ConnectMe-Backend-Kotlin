<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dummyprofilepic"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:id="@+id/TI"
        android:layout_toRightOf="@id/profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/otherMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="#1D1D1D"
            android:background="@drawable/vanish_chat_rectangle_button"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/otherMessageImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone" />

    </RelativeLayout>


    <TextView
        android:id="@+id/otherMessageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TI"
        android:layout_toRightOf="@id/profilePic"
        android:textSize="12sp"
        android:textColor="#B1B8C0"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"/>

</RelativeLayout>